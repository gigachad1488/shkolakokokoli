<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="200"
        x:Class="shkolakokokoli.Views.LoginWindow"
        Title="LoginWindow">
        <Grid RowDefinitions="Auto, *">
                <Grid Grid.Row="0" Background="Beige" RowDefinitions="*, *" Height="300">
                        <Grid Grid.Row="0" RowDefinitions="*, *">
                                <TextBlock Grid.Row="0"></TextBlock>
                        </Grid>
                </Grid>
                <Grid Grid.Row="1">
                        <Button Width="150" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30">Войти</TextBlock>
                        </Button>
                </Grid>
        </Grid>
</Window>
