<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:shkolakokokoli.Views">
    <Design.PreviewWith>
        <controls:ClientsPopup />
    </Design.PreviewWith>

    <Styles>
        <Style Selector="controls|ClientsPopup" >
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid Background="AliceBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Panel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                            <TextBlock Text="Your content..."/>
                        </Panel>
                        <Button Grid.Column="0" Grid.Row="0" Content="OK"/>
                        <Button Grid.Column="1" Grid.Row="0" Content="Cancel"/>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
    </Styles>
</Styles>
